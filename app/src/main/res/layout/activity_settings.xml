<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/event_list"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/pink_background">


        <TextView
            android:id="@+id/txtTimeFormat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="65dp"
            android:layout_marginTop="80dp"
            android:layout_marginEnd="65dp"
            android:layout_marginBottom="628dp"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName"
            android:text="Set Time Display Fromat"
            android:textColor="@color/purple_btn"
            android:textSize="20sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btn12hr"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginBottom="550dp"
            android:text="12hrs"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/pink_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.195"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btn24hr"
            android:layout_width="120dp"
            android:layout_height="50dp"
            android:layout_marginBottom="550dp"
            android:text="24hrs"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/purple_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.786"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />

        <Button
            android:id="@+id/btnExit"
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_marginBottom="300dp"
            android:text="Exit"
            android:textColor="@android:color/white"
            android:textStyle="bold"
            app:backgroundTint="@color/grey_btn"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.513"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="1.0" />
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>